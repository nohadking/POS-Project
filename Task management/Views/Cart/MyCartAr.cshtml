
@{
    ViewData["Title"] = "MyCartAr";
    Layout = "~/Views/Shared/_LayoutAr.cshtml";
}


<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>cart</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="cart-section section-b-space" style="margin-top:10px">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">image</th>
                            <th scope="col">product name</th>
                            <th scope="col">price</th>
                            <th scope="col">quantity</th>
                            <th scope="col">action</th>
                            <th scope="col">total</th>
                        </tr>
                    </thead>
                    <tbody id="CartBody">
                        
                    </tbody>
                </table>
                <table class="table cart-table table-responsive-md">
                    <tfoot>
                        <tr>
                            <td>total price :</td>
                            <td>
                                <h2 id="totalPrc"></h2>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row cart-buttons">
            <div class="col-6"><a href="#" class="btn btn-solid">continue shopping</a></div>
            <div class="col-6"><a href="#" class="btn btn-solid">check out</a></div>
        </div>
    </div>
</section>
<!--section end-->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function openSearch() {
        document.getElementById("search-overlay").style.display = "block";
    }

    function closeSearch() {
        document.getElementById("search-overlay").style.display = "none";
    }

    $(document).ready(function () {
        console.log("dfbd");
        var cart = JSON.parse(localStorage.getItem('cart')) || [];
        var CartBody = $('#CartBody');
        var totalPrc = 0;
        console.log(cart);

        cart.forEach(product => {

            totalPrc += product.quantity * product.price;
            var tr = `
                                <tr>
                                    <td>
                                        <a href="#"><img src="/Images/Home/${product.photo}" alt=""></a>
                                    </td>
                                    <td>
                                        <a href="#">${product.name}</a>
                                        <div class="mobile-cart-content row">
                                            <div class="col-xs-3">
                                                <div class="qty-box">
                                                    <div class="input-group">
                                                        <input type="number" name="quantity" class="form-control input-number"
                                                               value="${product.quantity}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-3">
                                                <h2 class="td-color">$${product.price.toFixed(2)}</h2>
                                            </div>
                                            <div class="col-xs-3">
                                                <h2 class="td-color">
                                                    <a href="#" class="icon"><i class="ti-close"></i></a>
                                                </h2>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h2 class="td-color">$${(product.price).toFixed(2)}</h2>
                                    </td>
                                    <td>
                                        <div class="qty-box">
                                            <div class="input-group">
                                                <input type="number" name="quantity" class="form-control input-number"
                                                       value="${product.quantity}">
                                            </div>
                                        </div>
                                    </td>
                                    <td><a href="#" class="icon"><i class="ti-close"></i></a></td>
                                    <td>
                                        <h2 class="td-color">$${(product.quantity * product.price).toFixed(2)}</h2>
                                    </td>
                                </tr>
                            `;
            CartBody.append(tr);
            var totalToShow = `$${totalPrc}`
            $('#totalPrc').text(totalToShow);
        });
    });
</script>

